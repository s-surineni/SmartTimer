<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/time_remaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:padding="8dp" />

    <Button
        android:id="@+id/stop_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:drawableStart="@drawable/ic_stop_inline"
        android:drawablePadding="0dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:padding="12dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:contentDescription="Stop timer" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:drawableStart="@drawable/ic_restart"
        android:drawablePadding="0dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:padding="12dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:contentDescription="Restart timer" />

    <Button
        android:id="@+id/dismiss_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:drawableStart="@drawable/ic_dismiss"
        android:drawablePadding="0dp"
        android:background="@android:color/transparent"
        android:minWidth="48dp"
        android:padding="12dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:contentDescription="Dismiss notification" />

</LinearLayout>
